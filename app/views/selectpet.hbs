<div id="container">
    <div id="main">
        <div class="row">

                {{> iOSstatusbar }}

            <div class="header">
                <div class="container page-title-bar">
                    <a href="javascript:history.back()">
                        <div class="col-xs-2 back-ctrl icon-arrow-left"></div>
                    </a>
                    <div class="col-xs-8 text-center page-title">
                        Select Pet
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">

                {{#each selPet}}

                    {{#if this.checkedIn}}
                        <div class="col-xs-2 text-center">
                            <a href="/addevent/{{this.pets_id}}">
                                <figure>
                                    <img src="{{this.img_link}}" alt="" data-id="{{this.pets_id}}"
                                         class="img-circle pet-icon">
                                    <figcaption>{{this.pet_name}}</figcaption>
                                </figure>
                            </a>
                        </div>
                    {{/if}}

                    {{#unless this.checkedIn}}
                        <div class="col-xs-2 text-center">
                            <a href="/addevent/{{this.pets_id}}">
                                <figure>
                                    <img src="{{this.img_link}}" alt="" data-id="{{this.pets_id}}"
                                         class="img-circle pet-icon absent">
                                    <figcaption>{{this.pet_name}}</figcaption>
                                </figure>
                            </a>
                        </div>
                    {{/unless}}

                {{/each}}

            </div>
        </div>

    </div>
</div>


