        </div>

        <div class="row">
            <div class="col-xs-12">
                <div class="container dailyreport">
                    Daily Report
                </div>
            </div>rs

        </div>
<!--==================================================-->

    {{#each eventHbsObject}}

            <div class="row">
                <div class="col-xs-12">
                    <div class="container">
                        <img src="/assets/img/icons/{{this.image_name}}.svg" alt="" class="event-icon">
                        <p class="event-title">{{this.event_type}}</p>
                        <p class="event-subtitle">{{this.notes}}</p>
                        <p class="event-time">{{this.createdAt}}</p>
